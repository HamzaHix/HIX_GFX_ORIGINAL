<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.AttackOnTitan.AOT_2.RECOTA_STUDIOguide">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.AttackOnTitan.AOT_2.RECOTA_STUDIOguide.apps.classes.HIX_Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/FullScreenTheme"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity
            android:screenOrientation="landscape"
            android:name="com.AttackOnTitan.AOT_2.RECOTA_STUDIOguide.apps.Activities.PlayVedio">
            <intent-filter>
                <action android:name="android.intent.action.PlayVedio" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.AttackOnTitan.AOT_2.RECOTA_STUDIOguide.apps.Activities.Activity_SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.AttackOnTitan.AOT_2.RECOTA_STUDIOguide.apps.Activities.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.AttackOnTitan.AOT_2.RECOTA_STUDIOguide.apps.Activities.Activity_Tips"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.AttackOnTitan.AOT_2.RECOTA_STUDIOguide.apps.Activities.Activity_Content"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.AttackOnTitan.AOT_2.RECOTA_STUDIOguide.apps.Activities.Activity_Setting"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
        <activity
            android:name="com.facebook.ads.AudienceNetworkActivity"
            android:hardwareAccelerated="true" />

        <meta-data
            android:name="com.google.android.gms.ads.AD_MANAGER_APP"
            android:value="true" />
    </application>

</manifest>